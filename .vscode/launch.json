{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug with GDB",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}/${fileBasenameNoExtension}", // 可执行文件
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}", // 统一目录
            "environment": [],
            "externalConsole": true, // 弹出单独终端，方便输入
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb", // 你的 gdb 路径
            "preLaunchTask": "Build single file",
            "setupCommands": [
                {
                    "description": "Enable pretty printing",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}
